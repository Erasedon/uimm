{% extends 'base.html.twig' %}

{% block title %}UIMM - Nos formations{% endblock %}

{% block body %}



        {% for message in app.flashes('success') %}
            <div style="color:green; font-weight:bold">{{ message }}</div>
        {% endfor %}
    <div class="mx-auto block max-w-sm rounded-lg bg-white p-6 shadow-lg dark:bg-neutral-700">
<h1>Nos formations</h1>
        {{ form_start(form)}}
        <div class="block max-w-sm rounded-lg bg-white p-6 shadow-lg dark:bg-neutral-700">
          {{ form_row(form.domaine) }}
     
          </div>
        <div class="block max-w-sm rounded-lg bg-white p-6 shadow-lg dark:bg-neutral-700">
        {{ form_row(form.niveau) }}
        </div>
        <div class="block max-w-sm rounded-lg bg-white p-6 shadow-lg dark:bg-neutral-700">
        {{ form_row(form.type) }}
        </div>

        <button type="submit">Filtrer</button>

        <a href="{{ path('app_test') }}">Test</a>
    
        {{ form_end(form)}}
    </div>
       <div style="margin-top:15px">

    {% for formation in formations %}

        <div> 
            Nom : {{formation.titre}} || Niveau : {{formation.niveau.id}}    ||
        
            Domaine existant : 
                {% for domaine in formation.appartenirDomaine %}
                    {{ domaine.titre }}
                {% endfor %}

            || Type existant : 
                {% for type in formation.effectuerTypeFormation %}
                    {{ type.titre }}
                {% endfor %}
        </div>
    {% else %}
    Aucun r√©sultat
        
    {% endfor %}
</div>
{% endblock %}
