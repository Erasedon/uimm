{% extends 'base.html.twig' %}

{% block title %}UIMM - Nos formations{% endblock %}

{% block body %}



<h1 class="ml-1">Nos formations</h1>
{% for message in app.flashes('success') %}
	<div style="color:green; font-weight:bold">{{ message }}</div>
{% endfor %}

{{ form_start(form)}}
<div class="grid grid-cols-3 gap-4">
	<div class="relative mb-6 px-3" data-te-input-wrapper-init>
		{{ form_row(form.domaine) }}

	</div>
	<div class="relative mb-6 px-3" data-te-input-wrapper-init>
		{{ form_row(form.niveau) }}
	</div>
	<div class="relative mb-6 px-3" data-te-input-wrapper-init>
		{{ form_row(form.type) }}
	</div>

    </div>
	<button class="ml-4 rounded bg-primary px-5 text-white" type="submit">Filtrer</button>


	{{ form_end(form)}}

	<div class="relative px-3 mt-12">


    {% for formation in formations %}

        <div> 
            Nom : {{formation.titre}} || Niveau : {{formation.niveau.id}}    ||
        
            Domaine existant : 
                {% for domaine in formation.appartenirDomaine %}
                    {{ domaine.titre }}
                {% endfor %}

            || Type existant : 
                {% for type in formation.effectuerTypeFormation %}
                    {{ type.titre }}
                {% endfor %}
        </div>
    {% else %}
    Aucun r√©sultat
        
    {% endfor %}
</div>
{% endblock %}
