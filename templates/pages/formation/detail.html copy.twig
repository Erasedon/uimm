{% extends 'base.html.twig' %}

{% block title %}UIMM - Detail de la formation {{formation.titre}} {% endblock %}

{% block body %}

    {% include('partials/_navbar.html.twig') %}

    {# cadre ensemble de ma page border-2 border-[black] #}
    <div class=" w-11/12 mx-auto mt-4 p-2  mb-5 pb-10"> 

        {# <h1 class="text-[black] text-center text-4xl mb-5 font-bold mt-9">{{formation.titre}}</h1> #}

        {# ici j'ai un cadre qui regroupe la photo et la description #}
        <div class="flex flex-row mt-6">

            {#  ici j'ai mon cadre photo #}
            <div class="w-[40%] p-1 h-[500px]  relative">
             {# <img src="{{ asset(formation.image) }}" alt="picture"> #}

                <div class="bg-[orange] text-[orange] w-[536px] h-[354px] z-20 absolute top-4 left-20 "><img src="{{ asset(formation.image) }}" alt="picture"></div>

                <div class="bg-[#112C50] text-[orange] w-[536px] h-[354px] z-10 absolute ml-5 mt-5 top-4 left-20"></div>

              </div>

            {# ici j'ai mon cadre ensemble description #}
            <div class="w-[60%] ml-1.5 p-1 flex flex-col pt-6"> 
            
                {# ici j'ai mon cadre pour ma simple description #}
                <div class="mt-3 text-[black] text-3xl mb-5 font-bold mt-9">{{formation.titre}} </div>

                 {# ici j'ai mon cadre pour mon type de formation #}
                <div class="mt-3 mb-7">
                    {% for form in formation.appartenirDomaine %}

                      <span class="inline-block whitespace-nowrap rounded-[0.27rem] bg-secondary-100 px-[0.65em] pt-[0.35em] pb-[0.25em] text-center align-baseline text-[0.75em] font-bold leading-none text-secondary-800">
                       {{form.titre}}
                    </span>                  
                        
                    {% endfor %}

                    {% for form in formation.effectuerTypeFormation %}

                    {# {{form.titre}}{% if loop.last %}{% else %},{% endif %} #}

                      <span class="inline-block whitespace-nowrap rounded-[0.27rem] bg-success-50 px-[0.65em] pt-[0.35em] pb-[0.25em] text-center align-baseline text-[0.75em] font-bold leading-none text-neutral-600">
                        {{form.titre}}
                    </span>
                    
                        
                    {% endfor %}

                </div>

                <div class="mt-3">{{formation.description}} </div>

                {# ici j'ai mon cadre pour mon niveau #}
                <div class="mt-3">Niveau de la formation : {{formation.niveau.titre}} ({{formation.niveau.description}})</div>

   


                {# ici j'ai mon cadre pour mon type de formation #}
                {# <div class="mt-3">Type de formation : 
                    {% for form in formation.effectuerTypeFormation %} #}

                    {# {{form.titre}}{% if loop.last %}{% else %},{% endif %} #}
{# 
                      <span class="inline-block whitespace-nowrap rounded-[0.27rem] bg-success-50 px-[0.65em] pt-[0.35em] pb-[0.25em] text-center align-baseline text-[0.75em] font-bold leading-none text-neutral-600">
                        {{form.titre}}
                    </span> #}
                    
                        
                    {# {% endfor %} #}
                {# </div> #}

            </div> {# fin ici j'ai mon cadre ensemble description #}

        </div> {# fin ici j'ai un cadre qui regroupe la photo et la description #}

        {# border-2 border-[black] #}
        <div class="">
            <div class=" flex flex-row mt-4"> 

                <div class=" w-2/6 mx-auto">
                    <h1 class="text-[orange] text-center text-2xl font-bold pb-5">Conditions d'accès</h1>

        

                        {% for form in formation.possederCondition %}

                            <li class="pl-1"> {{form.description}}</li>
                                                
                        {% endfor %}

                </div>

                <div class=" w-2/6 mx-auto">
                    <h1 class="text-[orange] text-center text-2xl font-bold pb-5">Lieu</h1>

                        {% for form in formation.situer %}

                            {{form.description}}<br>
                        
                        {% endfor %}
                </div>

            </div>

            <div class="mt-20">

                <div class="flex flex-row ">
                    <div class=" w-2/6 mx-auto">
                        <h1 class="text-[orange] text-center text-2xl font-bold pb-5">Métiers visés</h1>

                        {% for form in formation.viserMetier %}

                            <li class="pl-1"> {{form.titre}} : {{form.description}}</li>
                                                
                        {% endfor %}

                    </div>

                    <div class=" w-2/6 mx-auto">
                        <h1 class="text-[orange] text-center text-2xl font-bold pb-5">Candidater</h1>

                            Je candidate
                    </div>
                </div>

            </div>

        </div>

    </div> {# fin cadre ensemble de ma page #}

    {% include('partials/_footer.html.twig') %}

{% endblock %}
