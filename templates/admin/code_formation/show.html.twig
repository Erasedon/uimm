{% extends 'base.html.twig' %}

{% block title %}CodeFormation{% endblock %}

{% block body %}
    <h1>CodeFormation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ code_formation.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ code_formation.code }}</td>
            </tr>
            <tr>
                <th>Formation</th>
                <td> {% for formation in code_formation.formations %}
                        {{ formation.titre }}
                    {% endfor %}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_code_formation_index') }}">Retour vers la liste</a>

    <a href="{{ path('app_code_formation_edit', {'id': code_formation.id}) }}">Modifier</a>

    {{ include('admin/code_formation/_delete_form.html.twig') }}
{% endblock %}
