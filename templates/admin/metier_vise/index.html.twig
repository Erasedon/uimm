{% extends 'base.html.twig' %}

{% block title %}MetierVise index{% endblock %}

{% block body %}
    <h1>MetierVise index</h1>
<div class="flex flex-col">
    <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
        <div class="overflow-hidden">

    <table class="min-w-full text-left text-sm font-light"  >
        <thead class="border-b font-medium dark:border-neutral-500">
            <tr>
                <th scope="col" class="px-6 py-4">Id</th>
                <th scope="col" class="px-6 py-4">Titre</th>
                <th scope="col" class="px-6 py-4">Description</th>
                <th scope="col" class="px-6 py-4">Url</th>
                <th scope="col" class="px-6 py-4">Formation</th>
                <th scope="col" class="px-6 py-4">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for metier_vise in metier_vises %}
            <tr class="border-b transition duration-300 ease-in-out hover:bg-white hover:bg-neutral-600">                 
                 <td class="whitespace-nowrap px-6 py-4" >{{ metier_vise.id }}</td>
                 <td class="whitespace-nowrap px-6 py-4" >{{ metier_vise.titre }}</td>
                 <td class="whitespace-nowrap px-6 py-4" >{{ metier_vise.description }}</td>
                 <td class="whitespace-nowrap px-6 py-4" >{{ metier_vise.url }}</td>
                  <td class="whitespace-nowrap px-6 py-4" >
                  {% for formation in metier_vise.formations %}
                        {{ formation.titre }}
                    {% endfor %}

                </td>
                 <td class="whitespace-nowrap px-6 py-4" >
                    <a href="{{ path('app_metier_vise_show', {'id': metier_vise.id}) }}">Aperçu</a>
                    <a href="{{ path('app_metier_vise_edit', {'id': metier_vise.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_metier_vise_new') }}">Créer</a>
</div>
</div>
</div>
</div>
{% endblock %}
