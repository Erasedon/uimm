{% extends 'base.html.twig' %}

{% block title %}Condition{% endblock %}

{% block body %}
    <h1>Condition</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ condition.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ condition.description }}</td>
            </tr>
            <tr>
                <th>Formation</th>
                <td>      {% for formation in condition.formations %}
                        {{ formation.titre }}
                    {% endfor %}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_condition_index') }}">Retour vers la liste</a>

    <a href="{{ path('app_condition_edit', {'id': condition.id}) }}">Modifier</a>

    {{ include('admin/condition/_delete_form.html.twig') }}
{% endblock %}
