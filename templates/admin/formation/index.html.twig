{% extends 'base.html.twig' %}

{% block title %}Formation index{% endblock %}

{% block body %}
    <h1>Formation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Resume</th>
                <th>Description</th>
                <th>Url</th>
                <th>Duree_heure</th>
                <th>Duree_hentreprise</th>
                <th>Duree_mois</th>
                <th>Image</th>
                <th>Domaines</th>
                <th>Niveau</th>
                <th>Actif</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formation in formations %}
            <tr>
                <td>{{ formation.id }}</td>
                <td>{{ formation.titre }}</td>
                <td>{{ formation.resume }}</td>
                <td>{{ formation.description }}</td>
                <td>{{ formation.url }}</td>
                <td>{{ formation.dureeHeure }}</td>
                <td>{{ formation.dureeHentreprise }}</td>
                <td>{{ formation.dureeMois }}</td>
                <td>{{ formation.image }}</td>
                <td>
                    {% for domaine in formation.appartenirDomaine %}
                        {{ domaine.titre }}
                    {% endfor %}
                </td>
                <td>{{ formation.niveau.titre }}</td>   
                <td>{{ formation.actif ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_formation_show', {'id': formation.id}) }}">Aperçu</a>
                    <a href="{{ path('app_formation_edit', {'id': formation.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_formation_new') }}">Créer</a>
{% endblock %}
