{% extends 'base.html.twig' %}

{% block title %}Formation{% endblock %}

{% block body %}
    <h1>Formation</h1>

    <table class="min-w-full text-left text-sm font-light"  >
        <tbody>
            <tr>
                <th scope="col" class="px-6 py-4">Id</th>
                 <td class="whitespace-nowrap px-6 py-4" >{{ formation.id }}</td>
            </tr>
            <tr>
                <th scope="col" class="px-6 py-4">Titre</th>
                 <td class="whitespace-nowrap px-6 py-4" >{{ formation.titre }}</td>
            </tr>
            <tr>
                <th scope="col" class="px-6 py-4">Resume</th>
                 <td class="whitespace-nowrap px-6 py-4" >{{ formation.resume }}</td>
            </tr>
            <tr>
                <th scope="col" class="px-6 py-4">Description</th>
                 <td class="whitespace-nowrap px-6 py-4" >{{ formation.description }}</td>
            </tr>
            <tr>
                <th scope="col" class="px-6 py-4">Url</th>
                 <td class="whitespace-nowrap px-6 py-4" >{{ formation.url }}</td>
            </tr>
            <tr>
                <th scope="col" class="px-6 py-4">Duree_heure</th>
                 <td class="whitespace-nowrap px-6 py-4" >{{ formation.dureeHeure }}</td>
            </tr>
            <tr>
                <th scope="col" class="px-6 py-4">Duree_hentreprise</th>
                 <td class="whitespace-nowrap px-6 py-4" >{{ formation.dureeHentreprise }}</td>
            </tr>
            <tr>
                <th scope="col" class="px-6 py-4">Duree_mois</th>
                 <td class="whitespace-nowrap px-6 py-4" >{{ formation.dureeMois }}</td>
            </tr>
            <tr>
                <th scope="col" class="px-6 py-4">Image</th>
                 <td class="whitespace-nowrap px-6 py-4" >{{ formation.image }}</td>
            </tr>
            <tr>
                <th scope="col" class="px-6 py-4">Niveau</th>
                 <td class="whitespace-nowrap px-6 py-4" >{{ formation.niveau.titre }}</td>
            </tr>
            <tr>
                <th scope="col" class="px-6 py-4">code de formation</th>
                 <td class="whitespace-nowrap px-6 py-4" >
                        {% for code in formation.identifierFormation %}
                        {{ code.code }}
                    {% endfor %}
                    </td>
            </tr>
            <tr>
                <th scope="col" class="px-6 py-4">Frais Scolarite</th>
                 <td class="whitespace-nowrap px-6 py-4" >
                        {% for frais in formation.remunerer %}
                        {{ frais.description }}
                    {% endfor %}
                    </td>
            </tr>
            <tr>
                <th scope="col" class="px-6 py-4">Lieux</th>
                 <td class="whitespace-nowrap px-6 py-4" >
                         {% for lieux in formation.situer %}
                        {{ lieux.description }}
                    {% endfor %}
                    </td>
            </tr>
            <tr>
                <th scope="col" class="px-6 py-4">Metier viser</th>
                 <td class="whitespace-nowrap px-6 py-4" >
                         {% for metier in formation.viserMetier %}
                        {{ metier.titre }}
                    {% endfor %}
                    </td>
            </tr>
            <tr>
                <th scope="col" class="px-6 py-4">Type de Formation</th>
                 <td class="whitespace-nowrap px-6 py-4" >
                         {% for type in formation.effectuerTypeFormation %}
                        {{ type.titre }}
                    {% endfor %}
                    </td>
            </tr>
            <tr>
                <th scope="col" class="px-6 py-4">Domaines</th>
                 <td class="whitespace-nowrap px-6 py-4" >  {% for domaine in formation.appartenirDomaine %}
                        {{ domaine.titre }}
                    {% endfor %}</td>
            </tr>
              
            <tr>
                <th scope="col" class="px-6 py-4">Actif</th>
                 <td class="whitespace-nowrap px-6 py-4" >{{ formation.actif ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_formation_index') }}">Retour a la liste</a>

    <a href="{{ path('app_formation_edit', {'id': formation.id}) }}">Modifier</a>

    {{ include('admin/formation/_delete_form.html.twig') }}
{% endblock %}
