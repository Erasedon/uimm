{% extends 'base.html.twig' %}

{% block title %}Domaine index{% endblock %}

{% block body %}
<h1>Domaine index</h1>
<div class="flex flex-col">
    <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
            <div class="overflow-hidden">
                <table class="min-w-full text-left text-sm font-light">
                    <thead class="border-b font-medium dark:border-neutral-500">
                        <tr>
                            <th scope="col" class="px-6 py-4">Id</th>
                            <th scope="col" class="px-6 py-4">Titre</th>
                            <th scope="col" class="px-6 py-4">Image</th>
                            <th scope="col" class="px-6 py-4">Formation</th>
                            <th scope="col" class="px-6 py-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for domaine in domaines %}
                        <tr>
                            <td class="whitespace-nowrap px-6 py-4">{{ domaine.id }}</td>
                            <td class="whitespace-nowrap px-6 py-4">{{ domaine.titre }}</td>
                            <td class="whitespace-nowrap px-6 py-4">{{ domaine.image }}</td>
                            {#  <td class="whitespace-nowrap px-6 py-4" >{{ domaine.formations }}</td> #}
                            <td class="whitespace-nowrap px-6 py-4">
                                {% for formation in domaine.formations %}
                                {{ formation.titre }}
                                {% endfor %}
                            </td>
                            <td class="whitespace-nowrap px-6 py-4">
                                <a href="{{ path('app_domaine_show', {'id': domaine.id}) }}">Aperçu</a>
                                <a href="{{ path('app_domaine_edit', {'id': domaine.id}) }}">Modifier</a>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('app_domaine_new') }}">Créer</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}