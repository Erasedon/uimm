{% extends 'base.html.twig' %}

{% block title %}Domaine{% endblock %}

{% block body %}
    <h1>Domaine</h1>

    <table class="min-w-full text-left text-sm font-light"  >
        <tbody>
            <tr>
                <th scope="col" class="px-6 py-4">Id</th>
                 <td class="whitespace-nowrap px-6 py-4" >{{ domaine.id }}</td>
            </tr>
            <tr>
                <th scope="col" class="px-6 py-4">Titre</th>
                 <td class="whitespace-nowrap px-6 py-4" >{{ domaine.titre }}</td>
            </tr>
            <tr>
                <th scope="col" class="px-6 py-4">Image</th>
                 <td class="whitespace-nowrap px-6 py-4" >{{ domaine.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_domaine_index') }}">Retour vers la liste</a>

    <a href="{{ path('app_domaine_edit', {'id': domaine.id}) }}">Modifier</a>

    {{ include('admin/domaine/_delete_form.html.twig') }}
{% endblock %}
