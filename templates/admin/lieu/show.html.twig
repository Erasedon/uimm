{% extends 'base.html.twig' %}

{% block title %}Lieu{% endblock %}

{% block body %}
    <h1>Lieu</h1>

    <table class="min-w-full text-left text-sm font-light"  >
        <tbody>
            <tr>
                <th scope="col" class="px-6 py-4">Id</th>
                 <td class="whitespace-nowrap px-6 py-4" >{{ lieu.id }}</td>
            </tr>
            <tr>
                <th scope="col" class="px-6 py-4">Description</th>
                 <td class="whitespace-nowrap px-6 py-4" >{{ lieu.description }}</td>
            </tr>
            <tr>
                <th scope="col" class="px-6 py-4">Formation</th>
                 <td class="whitespace-nowrap px-6 py-4" > {% for lieux in lieu.formations %}
                        {{ lieux.titre }}
                    {% endfor %}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_lieu_index') }}">Retour vers la liste</a>

    <a href="{{ path('app_lieu_edit', {'id': lieu.id}) }}">Modifier</a>

    {{ include('admin/lieu/_delete_form.html.twig') }}
{% endblock %}
