{% extends 'base.html.twig' %}

{% block title %}Lieu index{% endblock %}

{% block body %}
    <h1>Lieu index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>formation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lieu in lieus %}
            <tr>
                <td>{{ lieu.id }}</td>
                <td>{{ lieu.description }}</td>
                <td>
                {% for lieux in lieu.formations %}
                        {{ lieux.titre }}
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('app_lieu_show', {'id': lieu.id}) }}">Aperçu</a>
                    <a href="{{ path('app_lieu_edit', {'id': lieu.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_lieu_new') }}">Créer</a>
{% endblock %}
