{% extends 'base.html.twig' %}

{% block title %}Lieu{% endblock %}

{% block body %}
    <h1>Lieu</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lieu.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ lieu.description }}</td>
            </tr>
            <tr>
                <th>Formation</th>
                <td> {% for lieux in lieu.formations %}
                        {{ lieux.titre }}
                    {% endfor %}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_lieu_index') }}">Retour vers la liste</a>

    <a href="{{ path('app_lieu_edit', {'id': lieu.id}) }}">Modifier</a>

    {{ include('lieu/_delete_form.html.twig') }}
{% endblock %}
