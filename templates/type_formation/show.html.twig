{% extends 'base.html.twig' %}

{% block title %}TypeFormation{% endblock %}

{% block body %}
    <h1>TypeFormation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ type_formation.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ type_formation.titre }}</td>
            </tr>
            <tr>
                <th>Formation</th>
                <td> {% for formation in type_formation.formations %}
                        {{ formation.titre }}
                    {% endfor %}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_type_formation_index') }}">Retour vers la liste</a>

    <a href="{{ path('app_type_formation_edit', {'id': type_formation.id}) }}">Modifier</a>

    {{ include('type_formation/_delete_form.html.twig') }}
{% endblock %}
