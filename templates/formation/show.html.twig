{% extends 'base.html.twig' %}

{% block title %}Formation{% endblock %}

{% block body %}
    <h1>Formation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ formation.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ formation.titre }}</td>
            </tr>
            <tr>
                <th>Resume</th>
                <td>{{ formation.resume }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ formation.description }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ formation.url }}</td>
            </tr>
            <tr>
                <th>Duree_heure</th>
                <td>{{ formation.dureeHeure }}</td>
            </tr>
            <tr>
                <th>Duree_hentreprise</th>
                <td>{{ formation.dureeHentreprise }}</td>
            </tr>
            <tr>
                <th>Duree_mois</th>
                <td>{{ formation.dureeMois }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ formation.image }}</td>
            </tr>
            <tr>
                <th>Niveau</th>
                <td>{{ formation.niveau.titre }}</td>
            </tr>
            <tr>
                <th>code de formation</th>
                <td>
                        {% for code in formation.identifierFormation %}
                        {{ code.code }}
                    {% endfor %}
                    </td>
            </tr>
            <tr>
                <th>Frais Scolarite</th>
                <td>
                        {% for frais in formation.remunerer %}
                        {{ frais.description }}
                    {% endfor %}
                    </td>
            </tr>
            <tr>
                <th>Lieux</th>
                <td>
                         {% for lieux in formation.situer %}
                        {{ lieux.description }}
                    {% endfor %}
                    </td>
            </tr>
            <tr>
                <th>Metier viser</th>
                <td>
                         {% for metier in formation.viserMetier %}
                        {{ metier.titre }}
                    {% endfor %}
                    </td>
            </tr>
            <tr>
                <th>Type de Formation</th>
                <td>
                         {% for type in formation.effectuerTypeFormation %}
                        {{ type.titre }}
                    {% endfor %}
                    </td>
            </tr>
            <tr>
                <th>Domaines</th>
                <td>  {% for domaine in formation.domaines %}
                        {{ domaine.titre }}
                    {% endfor %}</td>
            </tr>
              
            <tr>
                <th>Actif</th>
                <td>{{ formation.actif ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_formation_index') }}">Retour a la liste</a>

    <a href="{{ path('app_formation_edit', {'id': formation.id}) }}">Modifier</a>

    {{ include('formation/_delete_form.html.twig') }}
{% endblock %}
